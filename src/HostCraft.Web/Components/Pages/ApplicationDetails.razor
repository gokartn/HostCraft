@page "/applications/{Id:int}"
@rendermode InteractiveServer
@using System.Net.Http.Json
@using HostCraft.Core.Enums
@inject HttpClient Http
@inject NavigationManager Navigation
@inject ILogger<ApplicationDetails> Logger

<div class="page-container">
    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Loading application...</p>
        </div>
    }
    else if (app == null)
    {
        <div class="empty-state">
            <div class="empty-icon">‚ùå</div>
            <h2>Application Not Found</h2>
            <button class="btn btn-primary" @onclick="BackToApplications">
                Back to Applications
            </button>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-left">
                <h1>@app.Name</h1>
                <p class="subtitle">@app.Description</p>
            </div>
            <div class="header-actions">
                <span class="status-badge @GetStatusClass(app.Status)">
                    @GetStatusIcon(app.Status) @app.Status
                </span>
            </div>
        </div>
        
        <div class="details-grid">
            <div class="details-main">
                <div class="card compact-card">
                    <div class="card-header">
                        <h3>Configuration</h3>
                    </div>
                    <div class="info-grid compact">
                        <div class="info-item">
                            <span class="label">Docker Image</span>
                            <span class="value">@app.DockerImage</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Server</span>
                            <span class="value">@app.ServerName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Project</span>
                            <span class="value">@app.ProjectName</span>
                        </div>
                        @if (app.Port.HasValue)
                        {
                            <div class="info-item">
                                <span class="label">Port</span>
                                <span class="value">@app.Port</span>
                            </div>
                        }
                        <div class="info-item">
                            <span class="label">Replicas</span>
                            <span class="value">@app.Replicas</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Created</span>
                            <span class="value">@app.CreatedAt.ToString("g")</span>
                        </div>
                        @if (app.LastDeployedAt.HasValue)
                        {
                            <div class="info-item">
                                <span class="label">Last Deployed</span>
                                <span class="value">@app.LastDeployedAt.Value.ToString("g")</span>
                            </div>
                        }
                    </div>
                </div>
                
                @if (app.EnvironmentVariables != null && app.EnvironmentVariables.Any())
                {
                    <div class="card compact-card">
                        <div class="card-header">
                            <h3>Environment Variables</h3>
                        </div>
                        <div class="env-vars compact">
                            @foreach (var env in app.EnvironmentVariables)
                            {
                                <div class="env-var">
                                    <span class="env-key">@env.Key</span>
                                    <span class="env-value">@(string.IsNullOrWhiteSpace(env.Value) ? "(empty)" : "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢")</span>
                                </div>
                            }
                        </div>
                    </div>
                }
                 compact-card">
                    <div class="card-header">
                        <h3>Deployment History</h3>
                    </div>
                    @if (app.Deployments != null && app.Deployments.Any())
                    {
                        <div class="deployments-list compact">
                            @foreach (var deployment in app.Deployments)
                            {
                                <div class="deployment-item @GetStatusClass(deployment.Status)">
                                    <div class="deployment-row">
                                        <div class="deployment-status">
                                            <span class="status-icon @GetStatusClass(deployment.Status)">@GetStatusIcon(deployment.Status)</span>
                                            <span class="deployment-time">@deployment.StartedAt.ToString("MM/dd HH:mm")</span>
                                        </div>
                                        <div class="deployment-info">
                                            @if (!string.IsNullOrEmpty(deployment.ContainerId))
                                            {
                                                <span class="deployment-id">@deployment.ContainerId.Substring(0, 12)</span>
                                            }
                                            @if (!string.IsNullOrEmpty(deployment.ServiceId))
                                            {
                                                <span class="deployment-id">@deployment.ServiceId</span>
                                            }
                                            @if (deployment.FinishedAt.HasValue)
                                            {
                                                var duration = deployment.FinishedAt.Value - deployment.StartedAt;
                                                <span class="deployment-duration">@FormatDuration(duration)</span>
                                            }
                                        </div>
                                    </div>
                                    @if (deployment.Status == DeploymentStatus.Failed && !string.IsNullOrEmpty(deployment.ErrorMessage))
                                    {
                                        <div class="deployment-error">@deployment.ErrorMessage    <strong>Error:</strong> @deployment.ErrorMessage
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No deployments yet</p>
                    }
                </div>
            </div>
            
            <div class="details-sidebar">
                <div class="card compact-card actions-card">
                    <div class="card-header">
                        <h3>Actions</h3>
                    </div>
                    <div class="action-buttons">
                        <button class="btn btn-primary" @onclick="Redeploy" disabled="@isRedeploying">
                            @if (isRedeploying)
                            {
                                <span>üîÑ Deploying...</span>
                            }
                            else
                            {
                                <span>üöÄ Redeploy</span>
                            }
                        </button>
                        <button class="btn btn-secondary" @onclick="ViewLogs" disabled="@(!CanViewLogs())">
                            üìÑ View Logs
                        </button>
                        <button class="btn btn-secondary" @onclick="EditApplication">
                            ‚úèÔ∏è Edit
                        </button>
                        <button class="btn btn-danger" @onclick="DeleteApplication" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span>üóëÔ∏è Deleting...</span>
                            }
                            else
                            {
                                <span>üóëÔ∏è Delete</span>
                            }
                        </button>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(app.ContainerId) || !string.IsNullOrEmpty(app.ServiceId))
                {
                    <div class="card compact-card">
                        <div class="card-header">
                            <h3>Runtime</h3>
                        </div>
                        <div class="info-grid compact">
                            @if (!string.IsNullOrEmpty(app.ServiceId))
                            {
                                <div class="info-item">
                                    <span class="label">Type</span>
                                    <span class="value">üêù Swarm Service</span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Service ID</span>
                                    <span class="value">@app.ServiceId</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(app.ContainerId))
                            {
                                <div class="info-item">
                                    <span class="label">Type</span>
                                    <span class="value">üê≥ Container</span>
                                </div>
                                <div class="info-item">
                                    <span class="label">Container ID</span>
                                    <span class="value">@app.ContainerId.Substring(0, 12)</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }
    
    private ApplicationWithDeploymentsDto? app;
    private bool isLoading = true;
    private bool isRedeploying = false;
    private bool isDeleting = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadApplication();
    }
    
    private void BackToApplications()
    {
        Navigation.NavigateTo("/applications");
    }
    
    private async Task LoadApplication()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            app = await Http.GetFromJsonAsync<ApplicationWithDeploymentsDto>($"api/applications/{Id}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading application");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task Redeploy()
    {
        isRedeploying = true;
        StateHasChanged();
        
        try
        {
            var response = await Http.PostAsync($"api/applications/{Id}/deploy", null);
            if (response.IsSuccessStatusCode)
            {
                await Task.Delay(1000);
                await LoadApplication();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error redeploying application");
        }
        finally
        {
            isRedeploying = false;
            StateHasChanged();
        }
    }
    
    private void ViewLogs()
    {
        Navigation.NavigateTo($"/applications/{Id}/logs");
    }
    
    private bool CanViewLogs()
    {
        return !string.IsNullOrEmpty(app?.ContainerId) || !string.IsNullOrEmpty(app?.ServiceId);
    }
    
    private void EditApplication()
    {
        Navigation.NavigateTo($"/applications/{Id}/edit");
    }
    
    private async Task DeleteApplication()
    {
        isDeleting = true;
        StateHasChanged();
        
        try
        {
            var response = await Http.DeleteAsync($"api/applications/{Id}");
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/applications");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting application");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
    
    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalSeconds < 60)
            return $"{(int)duration.TotalSeconds}s";
        if (duration.TotalMinutes < 60)
            return $"{(int)duration.TotalMinutes}m {duration.Seconds}s";
        return $"{(int)duration.TotalHours}h {duration.Minutes}m";
    }
    
    private string GetStatusClass(DeploymentStatus status) => status switch
    {
        DeploymentStatus.Running => "status-running",
        DeploymentStatus.Success => "status-success",
        DeploymentStatus.Failed => "status-failed",
        DeploymentStatus.Queued => "status-queued",
        DeploymentStatus.Cancelled => "status-cancelled",
        _ => "status-unknown"
    };
    
    private string GetStatusIcon(DeploymentStatus status) => status switch
    {
        DeploymentStatus.Running => "üîÑ",
        DeploymentStatus.Success => "‚úÖ",
        DeploymentStatus.Failed => "‚ùå",
        DeploymentStatus.Queued => "‚è≥",
        DeploymentStatus.Cancelled => "üö´",
        _ => "‚ö™"
    };
    
    private record ApplicationWithDeploymentsDto(
        int Id,
        string Name,
        string? Description,
        int ServerId,
        string ServerName,
        int ProjectId,
        string ProjectName,
        string? DockerImage,
        int? Port,
        int Replicas,
        Dictionary<string, string>? EnvironmentVariables,
        DeploymentStatus Status,
        string? ContainerId,
        string? ServiceId,
        DateTime? LastDeployedAt,
        DateTime CreatedAt,
        List<DeploymentInfo> Deployments
    );
    
    private record DeploymentInfo(
        int Id,
        DeploymentStatus Status,
        string? ContainerId,
        string? ServiceId,
        DateTime StartedAt,
        DateTime? FinishedAt,
        string? ErrorMessage
    );
}
