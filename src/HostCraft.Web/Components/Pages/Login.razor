    font-size: 16px;
    color: #ffffff;
    transition: all 0.2s ease;
    box-sizing: border-box;
}

.form-control.with-icon {
    padding-left: 44px;
}

.form-control:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
