@page "/login"
@rendermode InteractiveServer
@layout EmptyLayout
@inject NavigationManager Navigation
@inject IWebAuthService AuthService
@inject HttpClient Http
@inject ILogger<Login> Logger

@using HostCraft.Web.Models

<PageTitle>Login - HostCraft</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-icon">ðŸš€</div>
            <h1>HostCraft</h1>
            <p>Sign in to your account</p>
        </div>

        <div class="login-form">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">
                    <svg class="alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    <span>@errorMessage</span>
                </div>
            }

            @if (successMessage != null)
            {
                <div class="alert alert-success">
                    <svg class="alert-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    <span>@successMessage</span>
                </div>
            }

            <EditForm Model="loginModel" OnValidSubmit="HandleLogin" FormName="loginForm">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-wrapper">
                        <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                        <InputText id="email" @bind-Value="loginModel.Email" placeholder="you@example.com" class="form-control with-icon" />
                    </div>
                    <ValidationMessage For="() => loginModel.Email" class="validation-error" />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-wrapper">
                        <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                        <InputText id="password" @bind-Value="loginModel.Password" type="password" placeholder="Enter your password" class="form-control with-icon" />
                    </div>
                    <ValidationMessage For="() => loginModel.Password" class="validation-error" />
                </div>

                <div class="form-options">
                    <label class="checkbox-wrapper">
                        <input type="checkbox" @bind="loginModel.RememberMe" />
                        <span class="checkmark"></span>
                        <span class="checkbox-label">Remember me</span>
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-sm"></span>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                <polyline points="10 17 15 12 10 7"></polyline>
                                <line x1="15" y1="12" x2="3" y2="12"></line>
                            </svg>
                            <span>Sign In</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>

        @if (setupRequired)
        {
            <div class="login-footer">
                <p>First time? <a href="/setup">Complete Initial Setup</a></p>
            </div>
        }
    </div>

    <div class="login-branding">
        <p>Self-hosted PaaS with Docker Swarm support</p>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;
    private bool setupRequired = false;

    protected override async Task OnInitializedAsync()
    {
        // Check if setup is required (to show/hide setup link)
        await CheckSetupStatus();

        // Check for success message from setup completion
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        if (query["setup"] == "complete")
        {
            successMessage = "Account created successfully! Please sign in.";
        }
    }

    private async Task CheckSetupStatus()
    {
        try
        {
            var response = await Http.GetAsync("api/auth/setup-required");
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<SetupStatusResponse>();
                setupRequired = result?.SetupRequired ?? true; // Default to true if null
            }
            else
            {
                setupRequired = true; // If API fails, assume setup required
            }
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Could not check setup status, assuming setup required");
            setupRequired = true; // If exception, assume setup required
        }
    }

    private async Task HandleLogin()
    {
        if (isLoading) return;

        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            Logger.LogInformation("Attempting login for user: {Email}", loginModel.Email);

            var result = await AuthService.LoginAsync(loginModel.Email, loginModel.Password);

            if (result.Success)
            {
                Logger.LogInformation("Login successful for user: {Email}", loginModel.Email);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result.Error ?? "Invalid email or password";
                Logger.LogWarning("Login failed for user: {Email} - {Error}", loginModel.Email, errorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to connect to the server. Please try again.";
            Logger.LogError(ex, "Exception during login for user: {Email}", loginModel.Email);
        }
        finally
        {
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; } = false;
    }
}

<style>
.login-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
