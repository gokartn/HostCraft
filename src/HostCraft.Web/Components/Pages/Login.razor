    color: #f87171;
    font-size: 12px;
    margin-top: 6px;
    display: block;
}

.login-footer {
    text-align: center;
    padding-top: 20px;
    margin-top: 8px;
    border-top: 1px solid rgba(99, 102, 241, 0.1);
