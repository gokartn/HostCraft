@page "/orphans"
@rendermode InteractiveServer
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation
@inject ILogger<Orphans> Logger

<PageTitle>Orphaned Resources - HostCraft</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-left">
            <h1>üßπ Orphaned Resources</h1>
            <p class="subtitle">Containers and services without linked applications</p>
        </div>
        <div class="header-actions">
            <button class="btn-secondary" @onclick="RefreshOrphans">
                <i class="icon">üîÑ</i> Refresh
            </button>
            @if (orphans != null && (orphans.OrphanedContainers.Any() || orphans.OrphanedServices.Any()))
            {
                <button class="btn-danger" @onclick="CleanupAllOrphans">
                    <i class="icon">üßπ</i> Cleanup All
                </button>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Scanning for orphaned resources...</p>
        </div>
    }
    else if (orphans == null)
    {
        <div class="error-state">
            <div class="error-icon">‚ùå</div>
            <h2>Error Loading Orphans</h2>
            <p>Could not load orphaned resources. Please try again.</p>
        </div>
    }
    else if (!orphans.OrphanedContainers.Any() && !orphans.OrphanedServices.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">‚úÖ</div>
            <h2>All Clear!</h2>
            <p>No orphaned containers or services found.</p>
            <small>All deployed resources are properly tracked in HostCraft.</small>
        </div>
    }
    else
    {
        <div class="orphans-container">
            @if (orphans.OrphanedContainers.Any())
            {
                <div class="orphans-section">
                    <h2>üì¶ Orphaned Containers (@orphans.OrphanedContainers.Count)</h2>
                    <div class="orphans-grid">
                        @foreach (var container in orphans.OrphanedContainers)
                        {
                            <div class="orphan-card">
                                <div class="orphan-header">
                                    <div class="orphan-info">
                                        <h3>@container.ContainerName</h3>
                                        <span class="orphan-id">@container.ContainerId.Substring(0, 12)</span>
                                    </div>
                                    <span class="state-badge @GetStateClass(container.State)">
                                        @container.State
                                    </span>
                                </div>
                                
                                <div class="orphan-details">
                                    <div class="detail-row">
                                        <span class="label">Image:</span>
                                        <span class="value">@container.Image</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Server:</span>
                                        <span class="value">@container.ServerName</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Missing App ID:</span>
                                        <span class="value">@container.ApplicationId</span>
                                    </div>
                                </div>
                                
                                <div class="orphan-actions">
                                    <button class="btn-sm btn-danger" @onclick="() => CleanupContainer(container.ContainerId, container.ServerId)">
                                        üóëÔ∏è Remove
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            @if (orphans.OrphanedServices.Any())
            {
                <div class="orphans-section">
                    <h2>üêù Orphaned Services (@orphans.OrphanedServices.Count)</h2>
                    <div class="orphans-grid">
                        @foreach (var service in orphans.OrphanedServices)
                        {
                            <div class="orphan-card">
                                <div class="orphan-header">
                                    <div class="orphan-info">
                                        <h3>@service.ServiceName</h3>
                                        <span class="orphan-id">@service.ServiceId.Substring(0, 12)</span>
                                    </div>
                                    <span class="state-badge">
                                        @service.Replicas replicas
                                    </span>
                                </div>
                                
                                <div class="orphan-details">
                                    <div class="detail-row">
                                        <span class="label">Image:</span>
                                        <span class="value">@service.Image</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Server:</span>
                                        <span class="value">@service.ServerName</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="label">Missing App ID:</span>
                                        <span class="value">@service.ApplicationId</span>
                                    </div>
                                </div>
                                
                                <div class="orphan-actions">
                                    <button class="btn-sm btn-danger" @onclick="() => CleanupService(service.ServiceId, service.ServerId)">
                                        üóëÔ∏è Remove
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
