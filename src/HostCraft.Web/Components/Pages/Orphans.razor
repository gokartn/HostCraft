    }
    
    .orphan-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
    }
</style>

@code {
    private OrphanedResourcesDto? orphans;
    private bool isLoading = true;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadOrphans();
    }
    
    private async Task LoadOrphans()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            orphans = await Http.GetFromJsonAsync<OrphanedResourcesDto>("api/applications/orphans");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading orphaned resources");
            orphans = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private async Task RefreshOrphans()
    {
        await LoadOrphans();
    }
    
    private async Task CleanupContainer(string containerId, int serverId)
    {
        try
        {
            var response = await Http.PostAsync($"api/applications/orphans/{containerId}/cleanup?serverId={serverId}", null);
            if (response.IsSuccessStatusCode)
            {
                await LoadOrphans();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cleaning up container {ContainerId}", containerId);
        }
    }
    
    private async Task CleanupService(string serviceId, int serverId)
    {
        try
        {
            var response = await Http.PostAsync($"api/applications/orphans/services/{serviceId}/cleanup?serverId={serverId}", null);
            if (response.IsSuccessStatusCode)
            {
                await LoadOrphans();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cleaning up service {ServiceId}", serviceId);
        }
    }
    
    private async Task CleanupAllOrphans()
    {
        if (orphans == null) return;
        
        var tasks = new List<Task>();
        
        foreach (var container in orphans.OrphanedContainers)
        {
            tasks.Add(CleanupContainer(container.ContainerId, container.ServerId));
        }
        
        foreach (var service in orphans.OrphanedServices)
        {
            tasks.Add(CleanupService(service.ServiceId, service.ServerId));
        }
        
        await Task.WhenAll(tasks);
        await LoadOrphans();
    }
    
    private string GetStateClass(string state) => state.ToLower() switch
    {
        "running" => "running",
        "exited" => "exited",
        _ => ""
    };
    
    public class OrphanedResourcesDto
    {
        public List<OrphanedContainerDto> OrphanedContainers { get; set; } = new();
        public List<OrphanedServiceDto> OrphanedServices { get; set; } = new();
    }
    
    public class OrphanedContainerDto
    {
        public string ContainerId { get; set; } = string.Empty;
        public string ContainerName { get; set; } = string.Empty;
        public string Image { get; set; } = string.Empty;
        public string State { get; set; } = string.Empty;
        public int ServerId { get; set; }
        public string ServerName { get; set; } = string.Empty;
        public int ApplicationId { get; set; }
        public Dictionary<string, string> Labels { get; set; } = new();
    }
    
    public class OrphanedServiceDto
    {
        public string ServiceId { get; set; } = string.Empty;
        public string ServiceName { get; set; } = string.Empty;
        public string Image { get; set; } = string.Empty;
        public int Replicas { get; set; }
        public int ServerId { get; set; }
        public string ServerName { get; set; } = string.Empty;
        public int ApplicationId { get; set; }
        public Dictionary<string, string> Labels { get; set; } = new();
    }
}
