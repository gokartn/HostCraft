        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    
    .orphans-section h2 {
        margin-bottom: 1rem;
        color: var(--text-primary);
    }
    
    .orphans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1rem;
    }
    
    .orphan-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .orphan-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
    }
    
    .orphan-info h3 {
        margin: 0;
        font-size: 1rem;
        color: var(--text-primary);
    }
    
    .orphan-id {
        font-family: monospace;
        font-size: 0.75rem;
        color: var(--text-secondary);
    }
    
    .state-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        background: var(--badge-bg);
        color: var(--text-primary);
    }
    
    .state-badge.running {
        background: #10b981;
        color: white;
    }
    
    .state-badge.exited {
        background: #ef4444;
