@inherits LayoutComponentBase

<div class="app-container">
    <aside class="sidebar">
        <NavMenu />
    </aside>

    <main class="main-content">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="error-content">
        <span class="error-icon">⚠️</span>
        <span class="error-text">A connection error occurred. Please check your connection and try again.</span>
        <a href="." class="reload">🔄 Reload Page</a>
        <button type="button" class="dismiss" onclick="this.parentElement.parentElement.style.display='none'">✕</button>
    </div>
</div>
